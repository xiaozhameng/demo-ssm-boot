<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xiaozhameng.ssm.boot.service.dao.DeviceInfoDao">

    <resultMap id="BaseResultMap" type="com.xiaozhameng.ssm.boot.service.dao.po.DeviceInfo">
        <result property="id" column="ID"/>
        <result property="ip" column="IP"/>
        <result property="port" column="PORT"/>
        <result property="dUserName" column="D_USER_NAME"/>
        <result property="dPassword" column="D_PASSWORD"/>
        <result property="stationNo" column="STATION_NO"/>
        <result property="jobNo" column="JOB_NO"/>
        <result property="delFlag" column="DEL_FLAG"/>
        <result property="createTime" column="CREATE_TIME"/>
        <result property="updateTime" column="UPDATE_TIME"/>
    </resultMap>

    <sql id="Base_Column_List">
        ID ,IP ,PORT ,D_USER_NAME ,D_PASSWORD ,STATION_NO ,JOB_NO ,DEL_FLAG ,CREATE_TIME ,UPDATE_TIME 
    </sql>

    <insert id="saveSelective"  useGeneratedKeys="true" keyProperty="id"  parameterType="com.xiaozhameng.ssm.boot.service.dao.po.DeviceInfo">
        INSERT INTO device_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="null!=id">
                ID  ,
            </if>
            <if test="null!=ip">
                IP  ,
            </if>
            <if test="null!=port">
                PORT  ,
            </if>
            <if test="null!=dUserName">
                D_USER_NAME  ,
            </if>
            <if test="null!=dPassword">
                D_PASSWORD  ,
            </if>
            <if test="null!=stationNo">
                STATION_NO  ,
            </if>
            <if test="null!=jobNo">
                JOB_NO  ,
            </if>
            <if test="null!=delFlag">
                DEL_FLAG  ,
            </if>
            <if test="null!=createTime">
                CREATE_TIME  ,
            </if>
            <if test="null!=updateTime">
                UPDATE_TIME  
            </if>
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <if test="null!=id">
                #{id, jdbcType=BIGINT} ,
            </if>
            <if test="null!=ip">
                #{ip, jdbcType=VARCHAR} ,
            </if>
            <if test="null!=port">
                #{port, jdbcType=INTEGER} ,
            </if>
            <if test="null!=dUserName">
                #{dUserName, jdbcType=VARCHAR} ,
            </if>
            <if test="null!=dPassword">
                #{dPassword, jdbcType=VARCHAR} ,
            </if>
            <if test="null!=stationNo">
                #{stationNo, jdbcType=VARCHAR} ,
            </if>
            <if test="null!=jobNo">
                #{jobNo, jdbcType=VARCHAR} ,
            </if>
            <if test="null!=delFlag">
                #{delFlag, jdbcType=VARCHAR} ,
            </if>
            <if test="null!=createTime">
                #{createTime, jdbcType=TIMESTAMP} ,
            </if>
            <if test="null!=updateTime">
                #{updateTime, jdbcType=TIMESTAMP} 
            </if>
        </trim>
    </insert>

    <update id="updateByPrimaryKeySelective" parameterType="com.xiaozhameng.ssm.boot.service.dao.po.DeviceInfo">
        UPDATE device_info
        <set>
			<if test="null!=ip and ''!=ip ">
				IP = #{ip, jdbcType=VARCHAR} ,
			</if>
		   <if test="null!=port">
			  PORT = #{port, jdbcType=INTEGER} ,
		   </if>
			<if test="null!=dUserName and ''!=dUserName ">
				D_USER_NAME = #{dUserName, jdbcType=VARCHAR} ,
			</if>
			<if test="null!=dPassword and ''!=dPassword ">
				D_PASSWORD = #{dPassword, jdbcType=VARCHAR} ,
			</if>
			<if test="null!=stationNo and ''!=stationNo ">
				STATION_NO = #{stationNo, jdbcType=VARCHAR} ,
			</if>
			<if test="null!=jobNo and ''!=jobNo ">
				JOB_NO = #{jobNo, jdbcType=VARCHAR} ,
			</if>
			<if test="null!=delFlag and ''!=delFlag ">
				DEL_FLAG = #{delFlag, jdbcType=VARCHAR} ,
			</if>
		   <if test="null!=createTime">
			  CREATE_TIME = #{createTime, jdbcType=TIMESTAMP} ,
		   </if>
		   <if test="null!=updateTime">
			  UPDATE_TIME = #{updateTime, jdbcType=TIMESTAMP} 
		   </if>
        </set>
        WHERE
            ID = #{id} 
    </update>

    <select id="getByPrimaryKey" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT
            <include refid="Base_Column_List" />
        FROM device_info
        WHERE
            ID = #{id} 
    </select>

    <select id="getByJobNoAndStationNo" parameterType="Object" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM device_info
        WHERE JOB_NO = #{jobNo}
        AND STATION_NO = #{stationNo}
        AND DEL_FLAG = 0
        LIMIT 1;
    </select>

    <select id="getPage" parameterType="Object" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM device_info
        LIMIT #{startId} , #{pageSize};
    </select>

    <select id="countAll" resultType="long">
        select count(1) from device_info ;
    </select>
</mapper>